+    if compiler.stage < 2 {
+        cargo.env("RUSTC_NO_PREFER_DYNAMIC", "1");
+    }
 
     if source_type == SourceType::Submodule {
         cargo.env("RUSTC_EXTERNAL_TOOL", "1");
